/* 搜索部分 */
.search-box{
  display: flex;
  height:280rpx;
  box-sizing: border-box;
  background-color: rgba(8,8,8,.84);
  padding:94rpx 56rpx;
  position: relative;
}

.search-input{
  height: 70rpx;
}

.search-btn{
  height: 70rpx;
}

.bg-image{
  background:url(http://a.diaox2.com/cms/sites/default/files/20161013/goodthing/TTCOVER.jpg);
}

/* 分类部分 */
.category-panel{
  background-color: #fff;
  padding-left: 44rpx;
  color: #ABACB0;
  font-size: 32rpx;
  display: block;
  box-sizing: border-box;
  flex: 1;
  overflow: hidden;
}

.category-section{
  display: flex;
  padding-top: 38rpx;
}

.icon-left{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-left image{
  width: 68rpx;
  height: 82rpx;
  margin-bottom: 26rpx;
}


.vertical-line{
  background:#d9d9d9;
  width:1px;
  height:60rpx;
}

.category-list{
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
  padding-right: 80rpx;
}

.title-and-list{
  margin-left: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.category-title{
  font-size:28rpx;
  color:#333333;
  line-height:28rpx;
  text-align:left;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.item{
  margin-right: 36rpx;
  display: inline-block;
}

.item-text{
  width:auto;
  padding:0 16rpx;
  height: 78rpx;
  border-radius:40rpx;
  border:1px rgb(228,228,228) solid;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  color:#080808;
  line-height:28rpx;
  text-align: center;
  box-sizing: border-box;
}

.selected{
  background:#3d3d3d;
  border-radius:40rpx;
  color:#fff;
}

.btn-container{
  background-color: #fff;
  display: flex;
  padding:40rpx 44rpx 40rpx 44rpx;
}

.btn-container button{
  flex:1;
}

.confirm{
  margin-left: 30rpx;
}

.scroll-view_H{
    white-space: nowrap;
}
