/* 顶部tab */
.category-tabs {
  padding-top: 10rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;

  background-color: rgb(46,46,47);
  color: #fff;
  height: 60rpx;
}

.tab{
  -webkit-box-flex:1;
      -ms-flex:1;
          flex:1;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  position: relative;
  overflow: hidden;
  font-size: 26rpx;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.tab-title{
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  -webkit-display: flex;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.line{
  width: 1px;
  background-color: rgb(81,81,81);
  height: 20rpx;
}

.arrow{
  /*原始大小 14 * 8 */
  -webkit-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
  width: 21rpx;
  height: 12rpx;
  margin-left: 14rpx;
}

.active .arrow{
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}

.no-border {
  border:none;
}

.arrow-red {
  width: 21rpx;
  height: 12rpx;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
  margin-left: 14rpx;
  vertical-align: 6rpx;
  -webkit-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}
.arrow-red-down{
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
  margin-left: 14rpx;
}
.selected{
  -webkit-transform: rotate(0);
          transform: rotate(0);
}
.section-sep{
  padding:20rpx 30rpx 0 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 1;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
